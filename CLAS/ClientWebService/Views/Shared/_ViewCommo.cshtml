<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/modal.css">
    <script src="~/lib//jquery//dist//jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/js/event.js"></script>
    <script type="text/javascript" src="~/js/login.js"></script>
    
    <title>@ViewData["Title"] - CLAS </title>
</head>

<body>
    <div class="container">
        <div class="sidebar">
            <div id="nav-head">
                <a asp-controller="Home" asp-action="Index">
                    <div class="logo"></div>
                </a>
            </div>

            <div class="nav-main">

                <ul id="afterlogin">
                    <li class="user">
                        <p id="userName"></p>
                    </li>
                    <li id="logout" class="user">로그아웃</li>
                </ul>
            </div>

            <ul class="nav-main item">
                <li><a href="/Note?cNo=1" class="link" id="notice">공지사항</a></li>
                <li><a href="/Note?cNo=2" class="link" id="community">커뮤니티</a></li>
                <li><a href="/Note?cNo=3" class="link" id="qna">QnA</a></li>
            </ul>
        </div>

        <div id="center">
            <div class="content">
                @RenderBody()
            </div>

            <div id="footer">
                <br />
                <a class="tagkyu">by southkyu</a>
                <br />
                <p class="admin">관리자 문의 : 010-4173-2597</p>
            </div>



        </div>


        <!--로그인 모달------------------------------------------------------>
        <div id="login_modal">
            <div id="modal_back" onclick="login_modalClose()"></div>
            <div id="login_contents">
                <div id="login_title">아이디 로그인</div>
                <div id="login_user_info">
                    <form id="login" method="post" onsubmin="return false">
                        <input type="text" id="login_user_id" maxlength="12" placeholder="아이디" />
                        <br>
                        <input type="password" id="login_user_pwd" maxlength="16" placeholder="비밀번호" />
                        <input type="submit" value="로그인" class="button" />
                    </form>
                </div>
            </div>
        </div>
        <!------------------------------------------------------------------>
        <!--회원가입 모달------------------------------------------------------>
        <div id="register_modal">
            <div id="modal_back" onclick="register_modalClose()"></div>
            <div id="register_contents">
                <div id="register_title">회원가입</div>
                <div id="register_user_info">
                    <form id="Res" method="post" onsubmin="return false">
                        <input type="text" id="register_user_id" maxlength="12" placeholder="아이디" />
                        <br>
                        <input type="password" id="register_user_pwd" maxlength="16" placeholder="비밀번호" />
                        <br>
                        <input type="text" id="register_user_name" maxlength="10" placeholder="이름" />
                        <br>
                        <input type="submit" value="회원가입" class="button" />
                    </form>
                </div>

            </div>
        </div>

    </div>

</body>
</html>
